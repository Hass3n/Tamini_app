<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ToDolist.AddTodo">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:lines="1"
        android:maxLines="1"
        android:hint="اسم العميل"
        />
    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="start"
        android:lines="1"
        android:hint="تليفون العميل"
        />
    <EditText
        android:id="@+id/date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:lines="1"
        android:maxLines="1"
        android:hint="تاريخ التعاقد"


        />
    <EditText
        android:id="@+id/c_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:lines="1"
        android:maxLines="1"
        android:hint="اسم الوسيط التاميني"
        />
    <EditText
        android:id="@+id/c_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:lines="1"
        android:maxLines="1"
        android:hint="قيمة القسط"
        />
    <EditText
        android:id="@+id/c_middlee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:lines="1"
        android:maxLines="1"
        android:enabled="false"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"

        ></Spinner>
    <Button
        android:id="@+id/insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:lines="1"
        android:maxLines="1"
        android:text="Add"
        android:background="@drawable/button_bg"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="8dp"
        android:lines="1"
        android:maxLines="1"
        android:text="update"
        android:background="@drawable/button_bg"

        />
    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="8dp"
        android:lines="1"
        android:maxLines="1"
        android:text="delete"
        android:background="@drawable/button_bg"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="8dp"
        android:lines="1"
        android:maxLines="1"
        android:text="notification"
        android:background="@drawable/button_bg"
        android:layout_marginTop="15dp"
        />

</LinearLayout>